<% currently_at 'Home' %>

<%= content_for :search do %>
	<% if notice %>
		<p class="notification notice">
			<%= notice %>
		</p>
	<% end %>
	<% if alert %>
		<p class="notification alert">
			<%= alert %>
		</p>
	<% end %>
<% end %>

<div class="title">Sign-In</div>
<hr/>
<div class="form_box">

<table width="100%">
	<tr>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<td style="text-align:right">
			  <div class="field"><%= f.label :email %>
		</td>
		<td style="text-align:left;padding-left:10px">
			<%= f.email_field :email, :class => 'field' %></div>
		</td>
	</tr>
	<tr>
		<td style="text-align:right">
			<div class="field"><%= f.label :password %>
		</td>
		<td style="text-align:left;padding-left:10px">
			<%= f.password_field :password, :class => 'field' %></div>
		</td>
	</tr>
	<tr>
		<td>
			<% unless devise_mapping.rememberable? -%>
			    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
			<% end -%>
		</td>
	</tr>
	<tr>
		<td colspan="2" style="padding:10px">
			<div><%= f.submit "Sign in", :class => 'button' %></div>
			<% end %>
		</td>
	</tr>
	<tr>
		<td colspan="2"><hr/></td>
	</tr>
	<tr>
		<td style="vertical-align:middle;text-align:right">Or Sign In With:</td>
		<td style="text-align:left;padding-left:30px"><%= render 'twitter_sign_in' %><%= render 'facebook_sign_in' %><%= render 'linkedin_sign_in' %></td>
	</tr>
</table>
<p/>
<hr/>
<p/>
<%= render :partial => "devise/shared/links" %>

</div>