<% currently_at 'Home' %>

<div class="title">Sign-In</div>
<hr/>
<hr/>
<div class="form_box">

<table width="100%">
	<tr>
		<td width="50%">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div class="field"><%= f.label :email %>
			  <%= f.email_field :email, :class => 'field' %></div>

			  <div class="field"><%= f.label :password %>
			  <%= f.password_field :password, :class => 'field' %></div>

			  <% if devise_mapping.rememberable? -%>
			    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
			  <% end -%>
			  <p>
			  <div><%= f.submit "Sign in", :class => 'button' %></div>
			<% end %>
		</td>
		<td width="50%">- OR - <p/>Sign In Through<br/><%= render 'twitter_sign_in' %></td>
	</tr>
</table>
<p/>
<hr/>
<p/>
<%= render :partial => "devise/shared/links" %>

</div>