<head>
    <%= stylesheet_link_tag 'landing', 'notification' %>
    <script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-34365499-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
	
</head>
<body>
    <div style="width:960px;margin:0 auto">
    <div style="position:absolute;left:50%;margin:60px 0 0 -220px">
        <%= link_to image_tag("FullLogoWhite.png", :size => "400x40"), home_path %>
    </div>

<div class="signinupbox" style="box-shadow:0 20px 60px 20px #C3E4ED">
	<div class="boxtitle" style="margin-bottom:20px">
		Sign In Below.
	</div>	

	<div style="margin-bottom:20px">
		<% if notice %>
			<p class="notification notice">
				<%= notice %>
			</p>
		<% end %>
		<% if alert %>
			<p class="notification alert">
				<%= alert %>
			</p>
		<% end %>
	</div>


<table width="100%">
	<tr>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<td style="text-align:right">
			  <div class="field"><%= f.label :email %>
		</td>
		<td style="text-align:left;padding-left:10px">
			<%= f.email_field :email, :class => 'field' %></div>
		</td>
	</tr>
	<tr>
		<td style="text-align:right">
			<div class="field"><%= f.label :password %>
		</td>
		<td style="text-align:left;padding-left:10px">
			<%= f.password_field :password, :class => 'field' %></div>
		</td>
	</tr>
	<tr>
		<td>
			<% unless devise_mapping.rememberable? -%>
			    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
			<% end -%>
		</td>
	</tr>
	<tr>
		<td colspan="2" style="text-align:center;padding:10px">
			<div><%= f.submit "Sign in", :class => 'buttonorange' %></div>
			<% end %>
		</td>
	</tr>
</table>
<p/>
<hr/>
<p/>
<%= render :partial => "devise/shared/links" %>

</div>
</div>
</div>

</body>