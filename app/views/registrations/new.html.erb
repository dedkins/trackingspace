<head>

    <%= stylesheet_link_tag 'landing', 'notification' %>

    <script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-34365499-1']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
	
</head>
<body>
   <div style="width:960px;margin:0 auto">
    <div style="position:absolute;left:50%;margin:60px 0 0 -220px">
        <%= link_to image_tag("FullLogo.png", :size => "400x40"), home_path %>
    </div>


<div style="float:left">
	<div>
	<% if notice %>
		<p class="notification notice">
			<%= notice %>
		</p>
	<% end %>
	<% if alert %>
		<p class="notification alert">
			<%= alert %>
		</p>
	<% end %>
</div>
<div class="signinupbox" style="box-shadow:0 20px 60px 20px #C3E4ED">
	<div class="boxtitle" style="margin-bottom:20px">
		Membership is Free.<br/>Simply complete the form below to start tracking.
	</div>		

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

		<table width="100%">
			<tr>
				<td style="vertical-align:middle;text-align:right"><%= f.label :name %></td>
				<td><%= f.text_field :name, :class => 'field' %></td>
			</tr>
			<tr>
				<td style="vertical-align:middle;text-align:right"><%= f.label :email %></td>
				<td><%= f.email_field :email, :class => 'field' %></td>
			</tr>
			<tr>
				<td style="vertical-align:middle;text-align:right"><%= f.label :password %></td>
				<td><%= f.password_field :password, :class => 'field' %></td>
			</tr>
			<tr>
				<td style="vertical-align:middle;text-align:right"><%= f.label :password_confirmation %></td>
				<td><%= f.password_field :password_confirmation, :class => 'field' %></td>
			</tr>
			<tr height="15px"/>
		</table>
	  
	  <div style="text-align:center"><%= f.submit "Sign up", :class => 'buttonorange' %></div>
	  <%= link_to 'Opps, I Meant to Sign-In', new_user_session_path %>
	<% end %>

	</div>
</div>

</div>
</div>