<% currently_at 'Spaces' %>

<div class="title">
  <%= link_to truncate(@space.building.address, :size => 20, :separator => ',', :omission => ''), building_path(@space.building.id) %> | Suite <%= @space.suite %>
</div>
<hr/>
      <table>
        <tr>
          <td >
            <div class="top_words">
              <%= number_with_delimiter(@space.sf) %> sq.ft.
            </div>
          </td>
          <td >
            <div class="top_words">
              <%= number_to_currency(@space.monthly) %>
            </div>
          </td>
          <td >
            <div class="top_words">
              <%= @space.microposts.count %>
            </div>
          </td>
          <td >
            <div class="top_words">
              <% if @leases.empty? %>No
              <% else %>Yes
              <% end %>
            </div>
          </td>
        </tr>
        <tr>
          <td width="25%" style="font-size:0.8em;text-align:center">Size</td>
          <td width="15%" style="font-size:0.8em;text-align:center">Monthly</td>
          <td width="15%" style="font-size:0.8em;text-align:center">Activity</td>
          <td width="15%" style="font-size:0.8em;text-align:center">Lease on Record</td>
        </tr>
      </table>
      <hr/> 
      <table width="100%">
        <tr height="8px"/>
        <tr>
          <% if user_signed_in? %>
            <td width="33%">
              <div class="add">Comment</button>
            </td>
            <td width="33%">
              <div class="add">Track It</button>
            </td>
            <td width="33%">
              <div class="add">Share It</button>
            </td>
          <% else %>
            <td width="100%" style="text-align:center"><%= link_to 'Sign-In to Start Tracking, Add Comments and Share', new_user_session_path %></td>
          <% end %>
        </tr>
      </table>
<table>
  <tr>
    <td>
      <% if @space._3dplanurl? %>
        <iframe frameborder="0" height="400" scrolling="no" src="<%= @space._3dplanurl %>" width="100%"></iframe>
        <% else %>
        <%= link_to image_tag('/assets/threedadfplan.png', :size => '600x350'), 'http://www.propertizing.com' %>
      <% end %>
    </td>
  </tr>

	<tr>
		<td width="600px" valign=top >
  		<% if user_signed_in? %>
  		<h3>Add a comment about this space:</h3>
  			<%= render '/shared/micropost_form' %>
  		<% end %>
  		<% unless @space.microposts.empty? %>
  			<%= render 'shared/feed' %>
  		<% end %>
    </td>
  </tr>
</table>

<%= content_for :sidebar do %>

  <table width="100%">
    <tr class="tabletitle">
      <th colspan="3">Stats</th>
    </tr>
    <tr class="tabletext">
      <td width="10%"/>
      <td width="40%">Status</td>
      <td><%= @space.status %></td>
    </tr>
    <tr class="tabletext">
      <td/>
      <td width="40%">Number</td>
      <td><%= @space.suite %></td>
    </tr>
    <tr>
      <td/>
      <td width="40%">Size</td>
      <td><%= @space.sf %>sf</td>
    </tr>
    <tr>
      <td/>
      <td width="40%">Monthly</td>
      <td><%= number_to_currency(@space.monthly) %></td>
    </tr>
    <tr>
      <td/>
      <td width="40%">Rate</td>
      <td><%= number_to_currency(@space.monthly/@space.sf) %></td>
    </tr>
  </table>

  <table width="100%">
    <tr height="15px"/>
    <tr>
      <th class="tabletitle">Leases on Record?</th>
    </tr>
    <tr class="tabletext">
      <td style="text-align:center">
        <% if @leases.empty? %>No
        <% else %>Yes
        <% end %>
      </td>
    </tr>
  </table>

  <table width="100%">
    <tr height="15px"/>
    <tr>
      <td style="text-align:center">
        <% if user_signed_in? %>
          <%= link_to 'New Lease', new_space_lease_path(@space) %> |
          <%= link_to 'Edit Stats', edit_building_space_path(@building,@space) %> |
          <% end %>

          <%= link_to 'Back', building_path(@building) %>      
      </td>
    </tr>
  </table>
  

<% end %>

