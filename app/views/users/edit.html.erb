<% currently_at 'myStuff' %>

<div class="title">Edit My Profile</div>
<hr/>
<hr/>
<%= form_for @user do |f| %>

  <div><%= f.label :name %><br />
  <%= f.text_field :name %></div>

  <div><%= f.label :username %><br />
  <%= f.text_field :username %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <% if @user.upgrade != nil %>

  <div><%= f.label :phone %><br />
  <%= f.phone_field :phone %></div>

  <div><%= f.label :description %><br />
  <%= f.text_area :description, :size => '40x5' %></div>

  <div><%= f.label :website %><br />
  <%= f.text_field :website %></div>

  <% end %>

  <%= link_to 'Edit Password', edit_user_password_path(@user) %>

  <div><%= f.submit "Update", :class => 'button' %></div>
<% end %>

