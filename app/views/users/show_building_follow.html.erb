<% currently_at 'myStuff' %>

<%= content_for :search do %>
	<%= render 'shared/topmsg' %>
<% end %>

<div class="title"><%= @title %> <%= link_to @user.name, building_path(@building) %></div>
<hr/>
<hr/>

<% unless @buildings.empty? %>
	<% @buildings.each do |f| %>
		<table width="100%">
			<tr>
				<td>
					<table width="100%">
						<tr>
							<td style="text-transform:uppercase;padding-top:10px;font-size:1.2em">
								<%= link_to f.name, building_path(f.id) %>
							</td>
							<td style="text-align:right">
								
							</td>
						</tr>
						<tr>
							<td colspan="2">
								<% if f.description %>
								"<%= f.description %>"
								<% end %>
							</td>
						</tr>
						<tr>
							<td>
								Activity: <%= f.microposts.count %> | Followers: <%= link_to f.building_relationships.count, following_user_path(f.id) %>
							</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>
	<% end %>
<% end %>