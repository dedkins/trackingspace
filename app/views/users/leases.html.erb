<% currently_at 'Spaces' %>

<div class="pagetitle">my Leases</div>

<table>
  <tr>
    <th>Lease Copy</th>
    <th width="20px"/>
    <th>Address</th>
    <th width="20px"/>
    <th>Expiration</th>
    <th width="20px"/>
    <th></th>
    <th></th>
  </tr>

<% @leases.each do |lease| %>
  <tr height="30px">
    <td><% if lease.file? %><%= link_to 'Download', lease.file.url %><% else %>No<% end %></td>
    <td width="20px"/>
    <td><%= link_to truncate(lease.space.building.address, :separator => ','), space_lease_path(lease.space,lease) %></td>
    <td width="20px"/>
    <td><%= lease.expiration %></td>
    <td width="20px"/>
    <td><%= link_to 'Edit', edit_space_lease_path(lease.space,lease) %></td>
  </tr>
<% end %>
</table>

<br />
