<% currently_at 'Leases' %>

<h1>my Leases</h1>

<table>
  <tr>
    <th>Copy of Lease?</th>
    <th>Address</th>
    <th>Expiration</th>
    <th></th>
    <th></th>
  </tr>

<% @leases.each do |lease| %>
  <tr>
    <td><% if lease.file? %>Yes<% else %>No<% end %></td>
    <td><%= link_to truncate(lease.space.building.address, :separator => ','), space_lease_path(lease.space,lease) %></td>
    <td><%= lease.expiration %></td>
    <td><%= link_to 'Edit', edit_space_lease_path(lease.space,lease) %></td>
  </tr>
<% end %>
</table>

