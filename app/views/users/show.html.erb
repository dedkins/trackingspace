<% if current_user == @user %>
	<%= currently_at 'myProfile' %>
<% else %>
	<%= currently_at 'People' %>
<% end %> 

	<table width="100%">
		<tr>
			<td rowspan="2" style="padding:10px;vertical-align:top" width="80px"><%= gravatar_image_tag @user.email %></td>
			<td colspan="2" class="title" style="text-align:left;vertical-align:top;padding-top:8px"><%= @user.name %></td>
		</tr>
		<tr>
			<% if user_signed_in? %>
				<td colspan="3" style="text-align:left;vertical-align:middle" width="100px">
					<% unless current_user == @user %>
						<div id="follow_form">
							<% if current_user.following?(@user) %>
								<%= render 'unfollow' %>
							<% else %>
								<%= render 'follow' %>
							<% end %>
						</div>
					<% else %>	
						<%= link_to 'Edit my Profile', edit_user_registration_path(@user) %>
						<% if mobile_device? %>
						<%= link_to ' | Sign-Out', destroy_user_session_path(@user) %>
						<% end %>
						<br/>
					<% end %>
				</td>
			<% else %>
				<td colspan="3">Sign-In to Follow</td>
			<% end %>
		</tr>
		<tr>
			<td colspan="3" style="padding-left:8px">
				
				Activity: <%= @user.microposts.count %> |
				Member Since: <%= @user.created_at.strftime("%b %d, %Y") %>  |
				Following: <%= @user.following.count %>  |
				Followers: <%= @user.followers.count %>
			</td>
		</tr>
		<tr><td colspan="3"><hr/><hr/></td></tr>
		<tr>
			<td colspan="3">
				<% if user_signed_in? %>
							Add a comment about this person:
						<%= render '/shared/micropost_form' %>
						<% else %>
							<%= link_to "Sign In to Add a Comment", new_user_registration_path %>
						<% end %>
			</td>
		</tr>
		<tr><td colspan="3"><hr/><hr/></td></tr>
		<tr>
			<td colspan="3">
				<% unless @user.microposts.empty? %>
					<%= render 'shared/feed' %>
				<% end %>
			</td>
		</tr>
	</table>

		<%= content_for :sidebar do %>
			
		<% end %>

		<%= content_for :search do %>
			<%= render 'shared/topmsg' %>
		<% end %>
	</table>
