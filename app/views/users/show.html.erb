<% if current_user == @user %>
	<%= currently_at 'myStuff' %>
<% else %>
	<%= currently_at 'People' %>
<% end %> 

	<table width="100%">
		<tr>
			<td rowspan="2" style="padding:10px;vertical-align:top" width="80px"><%= link_to gravatar_image_tag(@user.email), 'http://www.gravatar.com', :title => 'Click to Update Pic', :class => 'profile_pic', :target => '_blank' %></td>
			<td class="title" style="text-align:left;vertical-align:top;padding-top:8px"><%= @user.name %></td>
			<td width="40px"><%= button_to 'Edit my Profile', edit_user_registration_path(@user), :class => 'button' %></td>
		</tr>
		<% if @user.upgrade != nil %>
		<tr>
			<td colspan="2">
				<%= @user.description %>
			</td>
		</tr>
		<tr>
			<td colspan="3" style="border:1px solid #888888;background:#f0f0f0">
				<table width="100%">
					<td class="top_words"><%= @user.phone %></td>
					<td class="top_words"><%= mail_to @user.email, 'Email Me' %></td>
					<td class="top_words"><%= link_to 'My Website', 'http://'+@user.website, :target => '_blank' %></td>
				</table>
			</td>
		</tr>
		<% end %>
		<tr>
			<% if user_signed_in? %>
				<td colspan="3" style="text-align:left;vertical-align:middle" width="100px">
					<% unless current_user == @user %>
						<div id="follow_form">
							<% if current_user.following?(@user) %>
								<%= render 'unfollow' %>
							<% else %>
								<%= render 'follow' %>
							<% end %>
						</div>
					<% else %>
						<% if mobile_device? %>
						<%= link_to ' | Sign-Out', destroy_user_session_path, :method => 'delete' %>
						<% end %>
						<br/>
					<% end %>
				</td>
			<% else %>
				<td colspan="3">Sign-In to Follow</td>
			<% end %>
		</tr>
		<tr>
			<td colspan="3" style="padding-left:8px">
				
				Activity: <%= @user.microposts.count %> |
				Member Since: <%= @user.created_at.strftime("%b %d, %Y") %>  |
				Following: <%= @user.following.count %>  |
				Followers: <%= @user.followers.count %>
			</td>
		</tr>
		<% if user_signed_in? %>
			<% unless current_user == @user %>
				<tr><td colspan="3"><hr/><hr/></td></tr>
				<tr>
					<td colspan="3">
									Add a comment about this person:
								<%= render '/shared/micropost_form' %>
					</td>
				</tr>
			<% else %>
			<tr><td colspan="3"><hr/><hr/></td></tr>
			<% end %>
		<% else %>
			<tr>
				<td colspan="3">
					<%= link_to "Sign In to Add a Comment", new_user_registration_path %>
				</td>
			</tr>
		<% end %>
		<tr>
			<td colspan="3">
				<% unless @user.microposts.empty? %>
					<%= render 'shared/feed' %>
				<% end %>
			</td>
		</tr>
	</table>

		<%= content_for :sidebar do %>
			
		<% end %>

		<%= content_for :search do %>
			<%= render 'shared/topmsg' %>
		<% end %>
	</table>
