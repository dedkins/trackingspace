<% currently_at 'myStuff' %>


<div class="boxtitle" style="width:300px"><%= @title %></div>

<% unless @buildings.empty? %>
	<% @buildings.each do |f| %>
		<table width="100%">
			<tr>
				<td>
					<table width="100%">
						<tr>
							<td style="text-transform:uppercase;padding-top:10px;font-size:1.2em">
								<%= link_to f.building.address, building_path(f.building_id) %>
							</td>
							<td style="text-align:right">
								
							</td>
						</tr>
						<tr>
							<td>
								Activity: <%= f.building.microposts.count %>
							</td>
							<td>
								Followers: <%= f.building.building_relationships.count %>
							</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>
	<% end %>

<% else %>

<div style="padding:50px;text-align:center">Whoa, do you not like buildings?  Looks like you should start tracking some buildings!</div>

<% end %>
