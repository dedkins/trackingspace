<!DOCTYPE html>
<html>
<head>
  <title>Trackingspace</title>

  <script src="http://maps.google.com/maps/api/js?sensor=false"></script>

  <%= stylesheet_link_tag 'application'%>
  <%= stylesheet_link_tag 'starting_css'%>
  <%= stylesheet_link_tag 'gmaps4rails' %>
  <% if mobile_device? %>
  <%= stylesheet_link_tag 'mobile' %>
  <meta name="viewport" content="width=320; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"/>
  <% end %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
    <script>
        	$(function() {
        		var addresspicker = $( "#addresspicker" ).addresspicker();
        		var addresspickerMap = $( "#addresspicker_map" ).addresspicker({
        			regionBias: "fr",
        		  elements: {
        		    map:      "#map",
        		    lat:      "#lat",
        		    lng:      "#lng"
        		  }
        		});
        		var gmarker = addresspickerMap.addresspicker( "marker");
        		gmarker.setVisible(true);
        		addresspickerMap.addresspicker( "updatePosition");
        
        	});
  	</script>
</head>
<body>
    <div id="header">
      <div id="logo">
        <%= link_to 'TrackingSpace:', root_path %>
         <div id="lookup">
            <%= render 'buildings/form_new' %>
        </div>
      </div>
      <div id="user_nav">
        <% if user_signed_in? %>
          Signed in as <%= current_user.email %>. Not You?
          <%= link_to "Sign Out", destroy_user_session_path, :method => 'delete' %>
        <% else %>
          <%= link_to "Sign Up", new_user_registration_path %> | <%= link_to "Sign In", new_user_session_path %> | <%= link_to "Sign In w/ Twitter", '/auth/twitter' %>
        <% end %>
        <br/><br/>
        <%= link_to "Buildings", buildings_path %> | <%= link_to "Spaces", buildings_path %> | <%= link_to "Leases", buildings_path %> | <%= link_to "People", buildings_path %> 
        <% if user_signed_in? %>
          | <%= link_to "Profile", current_user %>
        <% end %>
      </div>
    </div>
  
    <% flash.each do |name, msg| %>
      <% content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
    <div id="yield">
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
    <p>
  <% if mobile_device? %>
    <%= link_to "Full Site", :mobile => 0 %>
  <% else %>
    <%= link_to "Mobile Site", :mobile => 1 %>
  <% end %>
</p>
</body>
</html>
