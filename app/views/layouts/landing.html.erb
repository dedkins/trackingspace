<head>

    <%= javascript_include_tag "http://code.jquery.com/jquery-latest.min.js", "http://gsgd.co.uk/sandbox/jquery/easing/jquery.easing.1.3.js", "slides.jquery.js" %>
    <%= stylesheet_link_tag 'landing' %>

    <script>
        $(function(){
            $("#slides").slides({
                preload: true,
                preloadImage: 'assets/loading.gif',
                play: 5000,
                pause: 1500,
                hoverPause: true
            });
        });
    </script>

    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-34365499-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>

</head>
<body>
<div style="width:960px;margin:0 auto">
    <div style="float:left;height:50px;padding:8px 10px 8px 20px">
        <%= link_to image_tag("logo_ts.png", :size => "40x40"), home_path %>
    </div>
    <div style="float:left;padding-top:25px;font-family:'Syncopate';font-size:1.5em;font-weight:bold;color:white">TrackingSpace
    </div>
    <div style="float:right;padding:25px 20px 0 0">
        <%= link_to 'Shhh...Sneak In This Way', home_path, :class => 'buttonorange', :style => 'color:white;text-decoration:none', :method => 'get' %>
    </div>
    <div style="float:right;padding:25px 8px 0 0">
        <%= link_to 'Sign-In', new_user_session_path, :class => 'buttonblue', :style => 'color:white;text-decoration:none', :method => 'get' %>
    </div>
    <div style="float:right;padding:25px 8px 0 0">
        <%= link_to 'Become a Member', new_user_registration_path, :class => 'buttonblue', :style => 'color:white;text-decoration:none', :method => 'get' %>
    </div>
    <div style="float:left;width:105%;margin:0 -8px;padding:20px 0;background:#efefef">
        <div id="slides" style="width:770px">
            <div class="slides_container">
                <div>
                    <%= image_tag("IntroductionSlide.png", :size => "770x500") %>
                </div>
                <div>
                    <%= image_tag("KeyFeatures.png", :size => "770x500") %>
                </div>
                <div>
                    <%= image_tag("ForTenants.png", :size => "770x500") %>
                </div>
                <div>
                    <%= image_tag("ForBrokers.png", :size => "770x500") %>
                </div>
                <div>
                    <%= image_tag("ForPropertyManagers.png", :size => "770x500") %>
                </div>
                <div>
                    <%= image_tag("BasicLayout.png", :size => "770x500") %>
                </div>
                <div>
                    <%= link_to image_tag("BecomeMember.png", :size => "770x500"), new_user_registration_path %>
                </div>
            </div>
            <div class="prev"><%= link_to image_tag("arrow-prev.png", :size => "24x43"), '#' %></div>
            <div class="next"><%= link_to image_tag("arrow-next.png", :size => "24x43"), '#' %></div>
        </div>
    </div>
<div style="position:relative;text-align:center;float:left;color:white;margin:0 auto;height:100px">
        &copy 2013 Trackingspace
</div>
</div>
</body>