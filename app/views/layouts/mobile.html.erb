<!DOCTYPE html>
<% if mobile_device? %>

<html>
<head>
  <title>Trackingspace</title>
  <script src="http://maps.google.com/maps/api/js?sensor=false"></script>

  <%= stylesheet_link_tag 'application'%>
  <%= stylesheet_link_tag 'mobile' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  
    <script>
        	$(function() {
        		var addresspicker = $( "#addresspicker" ).addresspicker();
        		var addresspickerMap = $( "#addresspicker_map" ).addresspicker({
        			regionBias: "fr",
        		  elements: {
        		    map:      "#map",
        		    lat:      "#lat",
        		    lng:      "#lng"
        		  }
        		});
        		var gmarker = addresspickerMap.addresspicker( "marker");
        		gmarker.setVisible(true);
        		addresspickerMap.addresspicker( "updatePosition");
        
        	});
  	</script>
</head>
    <div id="mobile_header">
      <div id="top">
        <div id="lookup">
            <%= render 'buildings/form_new' %>
        </div>
        
      </div>
        <div id="user_selection">
        <% if user_signed_in? %>
        <%= link_to 'My Stuff', current_user %>  |  
        <% end %>
        <%= link_to 'Buildings', buildings_path %>  |  <%= link_to "People", buildings_path %> 
          
        </div>
    </div>

    <% flash.each do |name, msg| %>
      <% content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
    <div id="yield">
      <%= yield %>
      <%= debug(params) if Rails.env.development? %>
    </div>
<footer>
  <div id="footerlinks">
          <% if user_signed_in? %>
            <%= link_to "Profile", current_user %> | 
            <%= link_to "Sign Out", destroy_user_session_path, :method => 'delete' %>
          <% else %>
            <%= link_to "Sign Up", new_user_registration_path %> or <%= link_to "Sign In", authentications_path %>
          <% end %>
  </div>
</footer>
<% end %>
</html>