<div style="padding:10px;background:black;color:white;margin:0 0 10px">	
	<% if alert %>
		<div style="width:95%;padding:5px;color:white;background:red;font-size:.9em;margin-bottom:8px">
			<%= alert %>
		</div>
	<% end %>
	<% if notice %>
		<div style="width:95%;padding:5px;color:white;background:green;font-size:.9em;margin-bottom:8px">
			<%= notice %>
		</div>
	<% end %>
	<% if @sponsorleft != 0 %>
	<div style="float:left">Send Email to Sponsor Client Access:</div>

	<%= form_tag(:controller => 'sponsors', :action => 'sendsponsoremail', :remote => true) do %>
		<%= email_field_tag :email %>
		<%= submit_tag "Send Email", :class => 'trackbutton' %>
	<% end %>
	<% else %>
            <div style="background:#FFFF7E;margin:2px;color:black;padding:8px">
              You've hit your limit for sponsoring - <%= link_to 'Upgrade for more', upgrade_path %>
            </div>
    <% end %>
	<div style="float:left;padding:5px 10px 0;font-size:.9em">
		Sponsored: <%= link_to @sponsorcount, sponsored_path, :style => 'margin-left:5px;font-size:1.1em' %>
	</div>
	<div style="float:left;padding:5px 10px 0;font-size:.9em">
		Remaining: 
		<% if current_user.upgrade == 'Upgrade100' %> Unlim
		<% else %><%= @sponsorleft %><% end %>
	</div>
	<div style="clear:left"/>

</div>