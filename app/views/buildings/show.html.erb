
<div class="yield_container">
	<div id="yieldtitle"><%= @building.address %> 
		<% unless @building.spaces.empty? %>| Avg: <%= render 'avg_rate' %><% end %>
	</div>
	
	<% if mobile_device? %>
	<div class="map">
		<%= gmaps({
		  "map_options" => {"auto_zoom" => false, "zoom" => 18, "type" => 'SATELLITE' },
		  "markers" => {"data" => @json }
		})
		%>
	</div>
	<div class="buttons">
		<% if user_signed_in? %>
		<div class="greenbutton"><%= link_to 'Comment', mbuilding_post_path(@building) %></div>
		<div class="greenbutton"><%= link_to 'See Spaces', building_spaces_path(@building) %></div>
		<div class="greenbutton"><%= link_to 'Edit Building', edit_building_path(@building) %></div>
		<% end %>
		<% unless user_signed_in? %>
		<div id="announcement"><%= link_to 'Sign In To See More', new_user_session_path %></div>
		<% end %>
	</div>

		<% unless @building.microposts.empty? %>
		<div class="feed">
			<%= render 'shared/feed' %>
		</div>
		<% end %>
	<% end %>

	<% if not mobile_device? %>
	<div class="map">
		<%= gmaps({
		  "map_options" => {"auto_zoom" => false, "zoom" => 18, "type" => 'SATELLITE' },
		  "markers" => {"data" => @json }
		})
		%>
	</div>

	<div class="yield_container">
		<div class="feed">
			<% if user_signed_in? %>
			<h3>Add a comment about this building:</h3>
				<%= render '/shared/micropost_form' %>
			<% end %>
			<% unless @building.microposts.empty? %>
				<%= render 'shared/feed' %>
			<% end %>
		</div>
		<div class="right">
			<% if @building.spaces.any? %>
			<%= render 'spaces' %>
			<% end %>
			<p></p>
			<script type="text/javascript"><!--
					google_ad_client = "ca-pub-5451064655705220";
					/* First */
					google_ad_slot = "8276506850";
					google_ad_width = 250;
					google_ad_height = 250;
					//-->
			</script>
			<script type="text/javascript"
				src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
			</script>
			<%= link_to 'Edit', edit_building_path(@building) %> |
			<%= link_to 'Back', buildings_path %>
		</div>
	<div class="clear"></div>
	</div>	
	<% end %>
	
</div>
<%= yield :scripts %>