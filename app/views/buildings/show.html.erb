<table>
	<h1><%= @building.address %> | Avg: <%= render 'avg_rate' %></h1>
	<hr>
	
	<% if mobile_device? %>
	<tr>
		<%= gmaps({
		  "map_options" => {"auto_zoom" => false, "zoom" => 18, "type" => 'SATELLITE' },
		  "markers" => {"data" => @json }
		})
		%>
	</tr>
	<tr width="100%" valign=top>
		<% if user_signed_in? %>
			<%= render '/shared/micropost_form' %>
		<% end %>
		<% unless @building.microposts.empty? %>
			<%= render 'shared/feed' %>
		<% end %>
	</tr>
	<% end %>

	<% if not mobile_device? %>
	<tr>
		<td width="600px" valign=top >
		<% if user_signed_in? %>
		<h3>Add a comment about this building:</h3>
			<%= render '/shared/micropost_form' %>
		<% end %>
		<% unless @building.microposts.empty? %>
			<%= render 'shared/feed' %>
		<% end %>
	</td>
	
	
	<td width="20px">
	</td>
	<td width="300px" valign=top>
		<%= gmaps({
		  "map_options" => {"auto_zoom" => false, "zoom" => 18, "type" => 'SATELLITE' },
		  "markers" => {"data" => @json }
		})
		%>
		<hr>
		<% if @building.spaces.any? %>
		Spaces
		<%= render 'spaces' %>
		<%= link_to 'Add New Space', new_building_space_path(@building) %>
		<% end %>


		<%= link_to 'Edit', edit_building_path(@building) %> |
		<%= link_to 'Back', buildings_path %>

	</td>
	<% end %>
</tr>
<%= yield :scripts %>
</table>