<%= currently_at 'Buildings' %>

<header id="content_title">
	<table width="100%">
		<tr>
			<td><%= @building.address %></td>
		</tr>
	</table>
</header>

<div class="yield_container">
			
			<table width="100%">
				<tr height="10px"/>
				<tr>
					<td >
						<div class="value">
							<%= render 'est_value' %>
						</div>
					</td>
					<td >
						<div class="good">
							<%= render 'avg_rate' %>
						</div>
					</td>
					<td >
						<div class="bad">
							0
						</div>
					</td>
					<td >
						<div class="good">
							50
						</div>
					</td>
				</tr>
				<tr>
					<td width="25%" style="font-size:0.8em;text-align:center">Estimated Value</td>
					<td width="25%" style="font-size:0.8em;text-align:center">Average Rate</td>
					<td width="25%" style="font-size:0.8em;text-align:center">Hype Score</td>
					<td width="25%" style="font-size:0.8em;text-align:center">Validity Score</td>
				</tr>
				<tr height="10px"/>
			</table>

			<table width="100%">
				<tr>
					<% if user_signed_in? %>
						<td>
							<div class="add">Comment</button>
						</td>
						<td>
							<div class="add">Track It</button>
						</td>
						<td>
							<div class="add">Share It</button>
						</td>
					<% else %>
						<td>Sign in for more options</td>
					<% end %>
				</tr>
				<tr height="10px"/>
				<tr>
						<td colspan="4">
						<%= gmaps({
						  "map_options" => {"auto_zoom" => false, "zoom" => 18, "type" => 'SATELLITE' },
						  "markers" => {"data" => @json }
						})
						%>
					</td>
				</tr>
			</table>

			<table width="100%">
				<tr class="contact_box_title">
					<th>Contact</th>
					<th>Property Manager</th>
					<th>Brokerage Agency</th>
					<th>Landscaper</th>
				</tr>
				<tr class="contact_box">
					<td><%= link_to 'Add Yourself', '' %></td>
					<td><%= link_to 'Add Yourself', '' %></td>
					<td><%= link_to 'Add Yourself', '' %></td>
					<td><%= link_to 'Add Yourself', '' %></td>
				</tr>
			</table>

	<% if mobile_device? %>

		<table width="100%">
			<tr>
          <td>
            <script type="text/javascript"><!--
              google_ad_client = "ca-pub-5451064655705220";
              /* First */
              google_ad_slot = "8276506850";
              google_ad_width = 250;
              google_ad_height = 250;
              //-->
            </script>
            <script type="text/javascript"
              src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
            </script>
          </td>
          <td>
            <script type="text/javascript"><!--
              google_ad_client = "ca-pub-5451064655705220";
              /* First */
              google_ad_slot = "8276506850";
              google_ad_width = 250;
              google_ad_height = 250;
              //-->
            </script>
            <script type="text/javascript"
              src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
            </script>
          </td>
        </tr>
		</table>

		<% unless @building.microposts.empty? %>
			<div class="feed">
				<%= render 'shared/feed' %>
			</div>
		<% end %>
	<% end %>

	<% if not mobile_device? %>

			<div class="yield_container">
				<div class="feed">
					<% if user_signed_in? %>
					<h3>Add a comment about this building:</h3>
						<%= render '/shared/micropost_form' %>
					<% end %>
					<% unless @building.microposts.empty? %>
						<div class="feeditems">
							<%= render 'shared/feed' %>
						</div>
					<% end %>
				</div>
			</div>
	<% end %>

	<%= content_for :sidebar do %>
	<table>
		<tr height="50px"/>
	</table>
		<%= render 'buildings/spaces' %>	
	<% end %>
</div>

<%= yield :scripts %>
