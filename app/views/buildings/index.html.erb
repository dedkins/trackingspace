<p id="notice"><%= notice %></p>
<% unless mobile_device? %>
<%= gmaps4rails(@json) %>

<table>
  <tr>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @buildings.each do |building| %>
  <tr>
    <td><%= building.address %></td>
    <td><%= link_to 'Show', building %></td>
    <td><%= link_to 'Edit', edit_building_path(building) %></td>
    <td><%= link_to 'Destroy', building, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<% end %>

<% if mobile_device? %>

<% @buildings.each do |building| %>
<table>
  <tr>
    <div id="building_mobile"><%= link_to building.address, building_path(building.id) %></div>
  </tr>
  <tr>
    <td valign=center width=100px>
      <div id="name">Spaces:</div>
    </td>
    <td width=50px>
      <div id="greenwhite"><%= building.spaces.count %></div>
    </td>
    <td valign=center width=100px>
      <div id="name">Posts:</div>
    </td>
    <td width=50px>
      <div id="greenwhite"><%= building.microposts.count %></div>
    </td>
  </tr>
</table>
<hr>
<% end %>

<% end %>
<%= yield :scripts %>


