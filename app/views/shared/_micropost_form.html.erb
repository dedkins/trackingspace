<%= form_for @micropost do |f| %>

<% if @building.present? %>
	<%= f.hidden_field :building_id, :value => @building.id %>
	<%= hidden_field_tag "back_to", building_path(@building) %>
<% end %>

<% if @space.present? %>
	<%= f.hidden_field :building_id, :value => @building.id %>
	<%= f.hidden_field :space_id, :value => @space.id %>
	<%= hidden_field_tag "back_to", building_space_path(@building,@space) %>
<% end %>

<% if @user %>
	<%= f.hidden_field :postforuser_id, :value => @user.id %>
	<%= hidden_field_tag "back_to", user_path(@user) %>
<% end %>

<%= f.text_field :content, :placeholder => 'Add a comment here...', :class => 'comment_input' %>
<%= f.submit "Submit", :class => 'button' %>

<% end %>
