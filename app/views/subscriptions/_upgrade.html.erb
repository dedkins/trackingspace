
<%= form_for Subscription.new do |f| %>
<div class="form_box">
<table width="100%">
	
		<tr>
			<td colspan="3" style="text-transform:uppercase;letter-spacing:3px">Secure Payment Processing</td>
		</tr>
		<tr>
			<td colspan="3"><hr/></td>
		</tr>
		<tr>
			<td width="35%" style="font-weight:bold;font-size:.9em;text-align:left;padding-left:50px"><%= label_tag :card_number, "Card Number" %></td>
			<td width="50%"><%= text_field_tag :card_number, nil, name: nil, :class => 'field' %></td>
			<td width="30px" style="text-align:left;padding-left:10px"><%= image_tag('secure-lock.png', :title => 'Your Information Is Secure', :size => '30x30') %></td>
		</tr>
		<tr>
			<td style="font-weight:bold;font-size:.9em;text-align:left;padding-left:50px"><%= label_tag :card_code, "CVV Code" %></td>
			<td><%= text_field_tag :card_code, nil, name: nil, :class => 'field' %></td>
			<td style="text-align:left;padding-left:10px"><%= image_tag('cvv2.png', :size => '45x30') %></td>
		</tr>
		<tr>
			<td style="font-weight:bold;font-size:.9em;text-align:left;padding-left:50px"><%= label_tag :card_month, "Card Expiration" %></td>
			<td colspan="2" style="text-align:left;padding-left:20px"><%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month", :class => 'expiration'} %>
			<%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year", :class => 'expiration'} %></td>
		</tr>
		<tr>
			<td height="10px"/>
		</tr>

		<div id="stripe_error">
	    	<noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.</noscript>
	  	</div>	
	  	<%= f.hidden_field :email, :value => current_user.email %>
	  	<%= f.hidden_field :stripe_card_token %>
		<%= f.hidden_field :plan_id, :value => '59' %>
		<%= f.hidden_field :plan_name, :value => 'Upgrade59' %>
	
<table>
	</div>
	<%= f.submit "Upgrade Now", :class => 'button' %>
<% end %>